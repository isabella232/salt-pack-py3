{% set build_dest = pillar.get('build_dest', '/srv/pkgs') %}
{% set build_runas = pillar.get('build_runas', 'root') %}
{% set build_py3 = pillar.get('build_py3', True) %}

# branch build version
{% set build_version = pillar.get('build_version', '') %}
{% set build_number_uscore = build_version|replace(".", "_") %}

{% if build_version == '' %}
{% set amazon_pkg = 'amazon_pkg' %}
{% set redhat_pkg = 'redhat_pkg' %}
{% set debian_pkg = 'debian_pkg' %}
{% set ubuntu_pkg = 'ubuntu_pkg' %}
{% else %}
{% set amazon_pkg = 'versions.' ~ build_number_uscore ~ '.amazon_pkg' %}
{% set redhat_pkg = 'versions.' ~ build_number_uscore ~ '.redhat_pkg' %}
{% set debian_pkg = 'versions.' ~ build_number_uscore ~ '.debian_pkg' %}
{% set ubuntu_pkg = 'versions.' ~ build_number_uscore ~ '.ubuntu_pkg' %}
{% endif %}


# repo sign timeout for signing packages
{% set repo_sign_timeout = 100.0 %}

# repo use of passphrases when signing
{% set repo_use_passphrase = True %}

